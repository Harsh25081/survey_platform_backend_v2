    {
      "name": "Sharing",
      "item": [
        {
          "name": "Share Survey (Public)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.link) {",
                  "        const token = response.link.split('/').pop();",
                  "        pm.environment.set('share_token', token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"surveyId\": \"{{survey_id}}\",\n  \"type\": \"PUBLIC\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/share",
              "host": ["{{base_url}}"],
              "path": ["api", "share"]
            },
            "description": "Share a survey publicly"
          },
          "response": []
        },
        {
          "name": "Share Survey (Personalized)",
          "request": {
            "method": "POST",
            "header": [
