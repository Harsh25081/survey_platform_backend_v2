            "body": {
              "mode": "raw",
              "raw": "{\n  \"surveyId\": \"{{survey_id}}\",\n  \"type\": \"PERSONALIZED\",\n  \"recipients\": [\n    {\n      \"email\": \"user1@example.com\",\n      \"mobile_no\": \"1234567890\"\n    },\n    {\n      \"email\": \"user2@example.com\",\n      \"mobile_no\": \"0987654321\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/share",
              "host": ["{{base_url}}"],
              "path": ["api", "share"]
            },
            "description": "Share a survey with specific recipients"
          },
          "response": []
        },
